{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["./src/*"]
    },
    "lib": [
      "es2017",
      "dom"
    ],
    "types": ["@testing-library/jest-dom", "jest"]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["./config/jest/setupTests.ts", "./src/**/*.tsx", "./src/**/*.ts"],
  "exclude": ["node_modules"]
}